{
  "imports": {
    "deno_dom/": "https://deno.land/x/deno_dom@v0.1.36-alpha/",
    "preact": "https://esm.sh/preact@10.13.1",
    "preact/": "https://esm.sh/preact@10.13.1/",
    "std/": "https://deno.land/std@0.180.0/"
  },
  "tasks": {
    "bookmarklet:build": "deno bundle ./webreg-scraping/bookmarklet/index.tsx | terser --module > ./webreg-scraping/bookmarklet/dist/bookmarklet.min.js",
    "scheduleofclasses:scrape": "deno run --allow-net=act.ucsd.edu ./scheduleofclasses/scrape.ts $TERM > ./scheduleofclasses/terms/$TERM.json",
    "classrooms:build": "deno bundle ./classrooms/index.tsx | terser --module > ./classrooms/public/index.min.js",
    "classrooms:watch": "echo \"Serving public/ at http://localhost:8080/\" && http-server ./classrooms/public/ -c-1 -s & deno bundle --watch ./classrooms/index.tsx ./classrooms/public/index.min.js",
    "classrooms:to-file": "deno run --allow-read=./scheduleofclasses/terms/$TERM.json classrooms/scripts/coursesToFile.ts $TERM > classrooms/public/classrooms-$TERM.txt",
    "classrooms:scrape-to-file": "deno task scheduleofclasses:scrape && deno task classrooms:to-file"
  }
}
